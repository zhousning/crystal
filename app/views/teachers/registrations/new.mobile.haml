- provide(:title, t('.title'))
.col-xs-12.reg-block
  = form_for resource, :as=>resource_name, :url=>registration_path(resource_name), :html=>{:class=>"form-horizontal"}, :validate => true do |f|
    = devise_error_messages!
    .form-group
      = f.label "* 手机:", :class=>"control-label col-xs-3 sr-only"
      .col-xs-12
        = f.text_field :phone, autofocus: true, :autocomplete => "off", :class=>"form-control bd-radius", :placeholder => "请输入手机号"
  
    .form-group
      = f.label "* 姓名:", :class=>" control-label col-xs-3 sr-only"
      .col-xs-12
        = f.text_field :name, :class=>"form-control bd-radius", :autocomplete => "off", :placeholder => "请输入姓名"
  
    .form-group
      = f.label "* 密码:", :class=>"control-label col-xs-3 sr-only"
      .col-xs-12
        = f.password_field :password, autocomplete: "off", :class=>"form-control bd-radius", :placeholder => "请输入密码"
  
    .form-group
      = f.label "* 确认密码:",:class=>"control-label col-xs-3 sr-only"
      .col-xs-12
        = f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control bd-radius", :placeholder => "确认密码"
  

    .form-group
      = f.label "* 选择身份:",:class=>"col-md-2 control-label sr-only"
      %label{:class => "checkbox-inline"}
        = radio_button("teacher","identity",Setting.teachers.identity_student,:checked=>true,:onclick=>"identity_select('1')")
        = label_tag Setting.teachers.identity_student_string
      %label{:class => "checkbox-inline"}
        = radio_button("teacher","identity",Setting.teachers.identity_teacher,:onclick=>"identity_select('2')")
        = label_tag Setting.teachers.identity_teacher_string
    .form-group
      .col-xs-12
        = f.submit "注册", :class=>"btn btn-warning btn-block"
    .form-group  
      .col-xs-12
        %p
          %h4
            ="如果已有帐号，请"
            = link_to  '登录',login_path

<script>
function identity_select(id){
if(id=='1')
{
$("#teacher").hide();
$("#student").show();
}
else
{
$("#teacher").show();
$("#student").hide();
}
}
</script>
