- provide(:title, t('.title'))
=render "layouts/header"
.m-top-00
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"form-horizontal",method: :put }) do |f| 
  .form-group
    .col-md-12.col-xs-12
      = f.password_field :current_password, autocomplete: "off", :class => "form-control",:placeholder=>"当前密码"
  .form-group
    .col-md-12.col-xs-12
      = f.password_field :password, autocomplete: "off", :class => "form-control",:placeholder=>"输入新密码"
  .form-group
    .col-md-12.col-xs-12
      = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control",:placeholder=>"确认新密码"
  %hr
  .form-group
    .col-xs-12
      = f.submit "提交", :class => "btn btn-success btn-block"
            


