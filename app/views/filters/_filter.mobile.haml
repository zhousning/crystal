.row.header-search.form-group
  .col-xs-12
    %ul.list-inline
      %li
        学生课程:
      %li{:class =>  (params[:school] == "all" ? "search-active" : nil)}
        = link_to "全部","/filters/select/all/all/all/#{params[:sex]}/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
      %li{:class => (params[:school] == "小学" ? "search-active" : nil)}
        = link_to "小学","/filters/select/小学/all/#{params[:course]}/#{params[:sex]}/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
      %li{:class => (params[:school] == "初中" ? "search-active": nil)}
        = link_to "初中","/filters/select/初中/all/#{params[:course]}/#{params[:sex]}/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
      %li{:class => (params[:school] == "高中" ? "search-active" : nil)}
        = link_to "高中","/filters/select/高中/all/#{params[:course]}/#{params[:sex]}/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
      %li{:class => (params[:school] == "艺术" ? "search-active" : nil)}
        = link_to "艺术","/filters/select/艺术/#{params[:grade]}/all/#{params[:sex]}/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
  .col-xs-12.appoint-left
    %ul.list-inline
      %li{:class => (params[:school] == "计算机" ? "search-active" : nil)}
        = link_to "电脑","/filters/select/计算机/#{params[:grade]}/all/#{params[:sex]}/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
  - if params[:school] and params[:school] != "all" 
    .col-xs-12
      .col-xs-12.bd-grey
        %p
          %ul.list-inline
            %li{:class => (params[:course] == "all" ? "search-active" : nil)}
              = link_to "全部","/filters/select/#{params[:school]}/all/all/#{params[:sex]}/#{params[:period]}/#{params[:time]}/",:class => "text-muted", :rel=>"nofollow"
            - @subjects.each do |f|
              %li{:class => (params[:course].to_s() == f.subject.to_s() ? "search-active" : nil)}
                = link_to f.subject,"/filters/select/#{params[:school]}/#{params[:grade]}/#{f.subject}/#{params[:sex]}/#{params[:period]}/#{params[:time]}/",:class => "text-muted", :rel=>"nofollow"
            
  .col-xs-12
    %ul.list-inline
      %li
        家教性别:
      %li{:class => (params[:sex] == "all" ? "search-active" : nil)}
        = link_to "全部","/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/all/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
      %li{:class => (params[:sex] == "1" ? "search-active" : nil)}
        = link_to "男","/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/1/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
      %li{:class => (params[:sex] == "2" ? "search-active" : nil)}
        = link_to "女","/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/2/#{params[:period]}/#{params[:time]}/", :rel=>"nofollow"
  .col-xs-12
    %ul.list-inline
      %li
        授课时期:
      %li{:class => (params[:period] == "all" ? "search-active" : nil)}
        = link_to "全部","/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/all/#{params[:time]}", :rel=>"nofollow"
      %li{:class => (params[:period] == "0" ? "search-active" : nil)}
        = link_to "平时可以","/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/0/#{params[:time]}", :rel=>"nofollow"
      %li{:class => (params[:period] == "1" ? "search-active" : nil)}
        = link_to "假期可以","/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/1/#{params[:time]}", :rel=>"nofollow"
  .col-xs-12
    %ul.list-inline
      %li
        约课时间:
      %li{:class => (params[:time] == "all" ? "search-active" : nil )}
        = link_to "全部", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/all/", :rel=>"nofollow"
      %li{:class => (params[:time] == "1" ? "search-active" : nil )}
        = link_to "周一", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/1/", :rel=>"nofollow"
      %li{:class => (params[:time] == "2" ? "search-active" : nil )}
        = link_to "周二", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/2/", :rel=>"nofollow"
      %li{:class => (params[:time] == "3" ? "search-active" : nil )}
        = link_to "周三", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/3/", :rel=>"nofollow"
      %li{:class => (params[:time] == "4" ? "search-active" : nil )}
        = link_to "周四", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/4/", :rel=>"nofollow"
  .col-xs-12.appoint-left
    %ul.list-inline
      %li{:class => (params[:time] == "5" ? "search-active" : nil )}
        = link_to "周五", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/5/", :rel=>"nofollow"
      %li{:class => (params[:time] == "6" ? "search-active" : nil )}
        = link_to "周六", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/6/", :rel=>"nofollow"
      %li{:class => (params[:time] == "0" ? "search-active" : nil )}
        = link_to "周日", "/filters/select/#{params[:school]}/#{params[:grade]}/#{params[:course]}/#{params[:sex]}/#{params[:period]}/0/", :rel=>"nofollow"

