- provide(:title, t('.title'))
= render "layouts/header"
.m-top-00
= form_for @course, :html=>{:class=>"form-horizontal"} do |f|
  .form-group
    .col-xs-6
      = f.label "课程名称", :class=>"col-xs-12 control-label"
    .col-xs-6
      = @course.name
  .form-group
    .col-xs-6
      = f.label "科目分类", :class=>"col-xs-12 control-label"
    .col-xs-6
      ="#{@course.category.second} / #{@course.category.third} / #{@course.category.subject}"
  .form-group
    .col-xs-6
      = f.label "课时费用", :class=>"col-xs-12 control-label"
    .col-xs-6
      ="#{ @course.price} 元/时"
  %hr
  .form-group
    .col-xs-6
      = link_to '编辑', edit_course_path(@course), :class=>"col-xs-12 btn btn-primary"
    .col-xs-6
      = link_to '删除', @course, :method => :delete, :data => { :confirm =>"#{t('courses.delete.title')}" }, :class=>"btn btn-danger col-xs-12"

