- provide(:title, "新闻 - " + @notice.title)
= render "layouts/subbar_top"
.filter-top
  .information-show
    .info-title-menu
      -if @notice.notices_category
        =link_to "家教呢 ",root_path
        >
        =link_to "教育讲堂",notices_path
        > 
        =link_to @notice.notices_category.title,list_notices_path(:id=>@notice.notices_category.id)
    .list-group.m-bottom-10
      .list-group-item
        .p-left-10
          %h4
            %strong= @notice.title
          .row
            .col-xs-12
              .col-xs-12.padding-none
                %small.pull-left
                  更新时间：
                  = @notice.created_at.strftime("%Y-%m-%d")
                  &nbsp;&nbsp;
                = social_share_button_tag(@notice.title,:class=>"share-icon")
      .list-group-item
        .p-left-10
          = format_string_newline(@notice.content).html_safe
